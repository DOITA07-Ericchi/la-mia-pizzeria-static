@{ Layout = null; }

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tw-elements/dist/css/index.min.css" />
<script src="https://cdn.tailwindcss.com"></script>
<script>tailwind.config = {
        theme: {
            extend: {
                fontFamily: {
                    sans: ['Inter', 'sans-serif'],
                },
            }
        }
    }</script>

@{
    ViewData["Title"] = "Pizzeria da Ericchi";
}

<navbar>
    <nav class="relative w-full flex flex-wrap items-center justify-between py-4 bg-gray-100 text-gray-500 hover:text-gray-700 focus:text-gray-700 shadow-lg">
        <div class="container-fluid w-full flex flex-wrap items-center justify-between px-6">
            <div class="container-fluid">
                <a class="flex items-center text-gray-900 hover:text-gray-900 focus:text-gray-900 mt-2 lg:mt-0 mr-1" href="#">
                    <img class="mr-2" src="~/img/pizza_margherita.png" style="height: 20px" alt="" loading="lazy" />
                    <span class="text-xl text-black font-semibold">Pizzeria da Ericchi</span>
                </a>
            </div>
        </div>
    </nav>
</navbar>

<div class="relative overflow-hidden bg-no-repeat bg-cover"
     style="
        background-position: 50%;
        background-image: url('img/pizzabg.webp');
        height: 500px;
      ">
    <div class="absolute top-0 right-0 bottom-0 left-0 w-full h-full overflow-hidden bg-fixed"
         style="background-color: rgba(0, 0, 0, 0.75)">
        <div class="flex justify-center items-center h-full">
            <div class="text-center text-white px-6 md:px-12">
                <h1 class="text-5xl md:text-6xl xl:text-7xl font-bold tracking-tight mb-12">
                    Pizza Pasta, Pizza Pasta
                </h1>
                <h2 class="text-3xl md:text-4xl xl:text-5xl font-bold tracking-tight mb-12">
                    Tabeyoyo, pomodoro!
                </h2>
            </div>
        </div>
    </div>
</div>
<div class="text-center bg-gray-50 text-gray-800 py-10 px-6">
    <!-- Container for demo purpose -->
    <div class="container my-12 px-6 mx-auto">

        <!-- Section: Design Block -->
        <section class="mb-32 text-gray-800 text-center">

            <h2 class="text-3xl font-bold mb-12 pb-4 text-center">Le nostre pizze</h2>

            <div class="grid lg:grid-cols-3 gap-6 xl:gap-x-12">
                <div class="mb-6 lg:mb-0">
                    <div class="relative block bg-white rounded-lg shadow-lg">
                        <div class="flex">
                            <div class="relative overflow-hidden bg-no-repeat bg-cover relative overflow-hidden bg-no-repeat bg-cover shadow-lg rounded-lg mx-4 -mt-4"
                                 data-mdb-ripple="true" data-mdb-ripple-color="light">
                                <img src="~/img/margherita.webp" class="w-full" />
                                <a href="#!">
                                    <div class="absolute top-0 right-0 bottom-0 left-0 w-full h-full overflow-hidden bg-fixed opacity-0 hover:opacity-100 transition duration-300 ease-in-out"
                                         style="background-color: rgba(251, 251, 251, 0.15)"></div>
                                </a>
                            </div>
                        </div>
                        <div class="p-6">
                            <h5 class="font-bold text-lg mb-3">Margherita</h5>
                            <p class="text-gray-500 mb-4">
                            </p>
                            <p class="mb-4 pb-2">
                                La classica. Pomodoro e mozzarella in un tripudio di sapore.
                            </p>
                            <p class="font-bold text-lg mb-3">5.00€</p>
                            <a href="#!" data-mdb-ripple="true" data-mdb-ripple-color="light"
                               class="inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded-full shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out">
                                Aggiungi al carrello
                            </a>
                        </div>
                    </div>
                </div>

                <div class="mb-6 lg:mb-0">
                    <div class="relative block bg-white rounded-lg shadow-lg">
                        <div class="flex">
                            <div class="relative overflow-hidden bg-no-repeat bg-cover relative overflow-hidden bg-no-repeat bg-cover shadow-lg rounded-lg mx-4 -mt-4"
                                 data-mdb-ripple="true" data-mdb-ripple-color="light">
                                <img src="~/img/marinara.webp" class="w-full" />
                                <a href="#!">
                                    <div class="absolute top-0 right-0 bottom-0 left-0 w-full h-full overflow-hidden bg-fixed opacity-0 hover:opacity-100 transition duration-300 ease-in-out"
                                         style="background-color: rgba(251, 251, 251, 0.15)"></div>
                                </a>
                            </div>
                        </div>
                        <div class="p-6">
                            <h5 class="font-bold text-lg mb-3">Marinara</h5>
                            <p class="text-gray-500 mb-4">
                            </p>
                            <p class="mb-4 pb-2">
                                Olio, aglio e origano. Niente di più genuino e mediterraneo.
                            </p>
                            <p class="font-bold text-lg mb-3">4.50€</p>
                            <a href="#!" data-mdb-ripple="true" data-mdb-ripple-color="light"
                               class="inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded-full shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out">
                                Aggiungi al carrello
                            </a>
                        </div>
                    </div>
                </div>

                <div class="mb-6 lg:mb-0">
                    <div class="relative block bg-white rounded-lg shadow-lg">
                        <div class="flex">
                            <div class="relative overflow-hidden bg-no-repeat bg-cover relative overflow-hidden bg-no-repeat bg-cover shadow-lg rounded-lg mx-4 -mt-4"
                                 data-mdb-ripple="true" data-mdb-ripple-color="light">
                                <img src="~/img/quattrostagioni.webp" class="w-full" />
                                <a href="#!">
                                    <div class="absolute top-0 right-0 bottom-0 left-0 w-full h-full overflow-hidden bg-fixed opacity-0 hover:opacity-100 transition duration-300 ease-in-out"
                                         style="background-color: rgba(251, 251, 251, 0.15)"></div>
                                </a>
                            </div>
                        </div>
                        <div class="p-6">
                            <h5 class="font-bold text-lg mb-3">Quattro Stagioni</h5>
                            <p class="text-gray-500 mb-4">
                            </p>
                            <p class="mb-4 pb-2">
                                Quattro come gli elementi della terra. Una pizza che rappresenta l'essenza stessa dell'esistenza.
                            </p>
                            <p class="font-bold text-lg mb-3">7.00€</p>
                            <a href="#!" data-mdb-ripple="true" data-mdb-ripple-color="light"
                               class="inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded-full shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out">
                                Aggiungi al carrello
                            </a>
                        </div>
                    </div>
                </div>

            </div>

            <h2 class="text-3xl font-bold my-12 pb-4 text-center">Video promozionale</h2>

            <div class="embed-responsive embed-responsive-16by9 relative w-full overflow-hidden"
                 style="padding-top: 56.25%">
                <iframe class="embed-responsive-item absolute top-0 right-0 bottom-0 left-0 w-full h-full" src="https://www.youtube-nocookie.com/embed/fSVFZGj0k_M" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>

</section>
        <!-- Section: Design Block -->

    </div>
    <!-- Container for demo purpose -->


</div>


<script src="https://cdn.jsdelivr.net/npm/tw-elements/dist/js/index.min.js"></script>
